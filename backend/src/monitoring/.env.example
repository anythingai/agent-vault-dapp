# ===========================================
# 1inch Fusion+ Monitoring System Configuration
# ===========================================

# Server Configuration
PORT=8080
NODE_ENV=production
HOST=0.0.0.0

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-minimum-256-bits-long
ADMIN_PASSWORD=ChangeThisSecurePassword123!
SESSION_TIMEOUT_HOURS=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://dashboard.fusionplus.io
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=monitoring@yourcompany.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=1inch Fusion+ Monitoring <monitoring@yourcompany.com>

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#monitoring-alerts
SLACK_USERNAME=FusionPlus Monitor
SLACK_ICON_EMOJI=:warning:

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_API_TOKEN=your-pagerduty-api-token

# Twilio SMS Integration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# Webhook Notifications
WEBHOOK_URL=https://your-custom-webhook.com/alerts
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10000

# Database Configuration (if using external DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monitoring
DB_USER=monitoring_user
DB_PASS=monitoring_password
DB_SSL=false

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Business Intelligence Configuration
ENABLE_BI_DASHBOARD=true
BI_DATA_RETENTION_DAYS=365
BI_EXPORT_ENABLED=true
BI_SCHEDULED_REPORTS=true

# Performance Monitoring
PERFORMANCE_METRICS_INTERVAL=30000
PERFORMANCE_HISTORY_RETENTION_HOURS=168
ANOMALY_DETECTION_ENABLED=true
ANOMALY_DETECTION_SENSITIVITY=0.8
CAPACITY_PLANNING_ENABLED=true

# Security Monitoring
SECURITY_EVENT_RETENTION_DAYS=90
THREAT_INTELLIGENCE_ENABLED=true
BEHAVIORAL_ANALYSIS_ENABLED=true
INCIDENT_AUTO_RESPONSE=false

# Alert Configuration
ALERT_DEFAULT_ESCALATION_TIME=900000
ALERT_MAX_ESCALATION_LEVELS=3
ALERT_RATE_LIMIT_ENABLED=true
ALERT_DEDUPLICATION_WINDOW=300000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/monitoring.log
LOG_FILE_MAX_SIZE=100mb
LOG_FILE_MAX_FILES=10
LOG_CONSOLE_ENABLED=true

# Metrics Storage
METRICS_RETENTION_HOURS=720
METRICS_AGGREGATION_INTERVAL=60000
METRICS_CLEANUP_INTERVAL=3600000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_SIZE_LIMIT=1048576

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Compliance & Audit
COMPLIANCE_MODE=false
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
DATA_ANONYMIZATION=false

# Feature Flags
ENABLE_DASHBOARD_EXPORT=true
ENABLE_API_DOCUMENTATION=true
ENABLE_METRICS_API=true
ENABLE_HEALTH_CHECK=true

# External Service Integrations
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key
PROMETHEUS_URL=http://localhost:9090

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=monitoring-backups
BACKUP_S3_REGION=us-east-1

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_CA_PATH=./certs/ca.crt

# Development Configuration
DEBUG=monitoring:*
DEVELOPMENT_MODE=false
MOCK_DATA_ENABLED=false
PROFILING_ENABLED=false

# Network Configuration
PROXY_ENABLED=false
PROXY_HOST=localhost
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=

# Timezone Configuration
TZ=UTC
DEFAULT_TIMEZONE=UTC
LOCALE=en-US

# Resource Limits
MAX_MEMORY_USAGE_MB=1024
MAX_CPU_USAGE_PERCENT=80
MAX_DISK_USAGE_PERCENT=85
MAX_OPEN_FILES=65536

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_ITEMS=10000
CACHE_CLEANUP_INTERVAL=600000

# Queue Configuration
QUEUE_ENABLED=true
QUEUE_MAX_SIZE=10000
QUEUE_BATCH_SIZE=100
QUEUE_FLUSH_INTERVAL=5000

# Notification Rate Limits
EMAIL_RATE_LIMIT_PER_HOUR=100
SLACK_RATE_LIMIT_PER_HOUR=500
SMS_RATE_LIMIT_PER_HOUR=50
WEBHOOK_RATE_LIMIT_PER_HOUR=1000

# Advanced Security
IP_WHITELIST=
IP_BLACKLIST=
REQUIRE_2FA=false
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_AGE_DAYS=90

# Monitoring Health Checks
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Custom Metrics
CUSTOM_METRICS_ENABLED=true
CUSTOM_METRICS_ENDPOINT=/metrics/custom
CUSTOM_METRICS_AUTH_REQUIRED=true

# API Versioning
API_VERSION=v1
API_VERSION_HEADER=X-API-Version
DEPRECATED_ENDPOINTS_ENABLED=false

# Error Handling
ERROR_STACK_TRACE_ENABLED=false
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_THRESHOLD=10

# Performance Tuning
GC_ENABLED=true
CLUSTER_MODE=false
WORKER_PROCESSES=auto
KEEP_ALIVE_TIMEOUT=65000